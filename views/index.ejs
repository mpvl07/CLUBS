/* Form container */
.form-popup {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 1px solid #ccc;
  z-index: 9;
  background-color: #f1f1f1;
  padding: 20px;
  width: 90vw;
  height: 90vh;
  max-width: 800px;
  max-height: 800px;
  overflow-y: auto;
  box-sizing: border-box;
}

/* Form labels */
.form-popup label {
  display: block;
  margin-bottom: 10px;
  font-size: 18px;
}

/* Form inputs */
.form-popup input[type="text"],
.form-popup input[type="date"],
.form-popup input[type="datetime-local"],
.form-popup textarea {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  font-size: 18px;
  border: none;
  border-bottom: 2px solid #ccc;
  background-color: transparent;
}

/* Form input focus */
.form-popup input[type="text"]:focus,
.form-popup input[type="date"]:focus,
.form-popup input[type="datetime-local"]:focus,
.form-popup textarea:focus {
  outline: none;
  border-color: #4CAF50;
}

/* Form submit button */
.form-popup button[type="submit"],
.form-popup button[type="button"] {
  background-color: #4CAF50;
  color: white;
  border: none;
  cursor: pointer;
  padding: 10px 20px;
  font-size: 18px;
  border-radius: 5px;
  transition: all 0.2s ease-in-out;
}

.form-popup button[type="submit"]:hover,
.form-popup button[type="button"]:hover {
  background-color: #45a049;
}

/* Form close button */
.form-popup #close-form {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 24px;
  color: #ccc;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
}

.form-popup #close-form:hover {
  color: #4CAF50;
}

/* Form error message */
.form-popup .form-error {
  color: red;
  font-size: 14px;
  margin-top: 5px;
}


    

