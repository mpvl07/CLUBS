                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="page" href="/gallery">Gallery</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="page" href="/clubs">Clubs</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="page" href="/events">Events</a>
                        </li>
                    </ul>
                    <div class="ml-3">
                        <button class="btn btn-outline-warning btn" onclick="window.location.href='/google'">
                          Admin Login
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <section class="about">
        
        <div class="main">
            <img src="<%= image %>" alt="imh">
            <div class="about-text">
               <!-- <%= clubname %> -->
                <h2><u>
                        <%= title %>
                    </u></h2>
                  
                <p>
                    <%= description %>
                </p>
                <h6>Venue :<%= venue %>
                </h6>
                
                <% const timestamp=new Date(date); %>
                    <h6>Date: <%= timestamp.toLocaleDateString() %>
                    </h6>
                
                
                    <h6>Time: <%= new Date(time1).toLocaleTimeString([], {hour: '2-digit' , minute:'2-digit'}) %>
                    </h6>
                <button><a href="/rrr?clubname=<%= clubname %>&title=<%= title %>&time1=<%= time1 %>">Register</a></button>
                <!-- <button type="submit">Register</button> -->
            </div>
        </div>
    </section>
