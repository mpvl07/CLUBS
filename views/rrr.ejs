  <title>Registration Form</title>
  <style>
    body {
      background: linear-gradient(45deg, #ff6b6b, #556270);
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 30px;
      font-size: 0.9em;
      color: white;
    }

    label {
      margin-bottom: 0.3rem;
    }

    input[type="text"],
    select,
    input[type="file"],
    input[type="number"] {
      width: 30%;
      padding: 0.5rem;
      margin-bottom: 1rem;
      border: none;
      border-radius: 4px;
      background-color: #f5f5f5;
      color: #333;
    }

    input[type="text"]:focus,
    select:focus,
    input[type="file"]:focus,
    input[type="number"]:focus {
      outline: none;
      border: 1px solid #888;
    }

    input[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover {
      background-color: #3e8e41;
    }

    .popup {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 20px;
      background-color: #fff;
      border: 1px solid #ccc;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
      z-index: 999;
      display: none;
    }
    .main{
      text-align: center;
    }
    button[type="submit"] {
  display: inline-block;
  font-size: 1.2em;
  font-weight: bold;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 4px;
  background-color:#556270;
  color: white;
  text-align: center;
  text-decoration: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
  margin-bottom: 10px ;
}

button[type="submit"]:hover {
  background-color: #3e8e41;
}

  </style>
