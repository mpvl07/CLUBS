    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Poppins:wght@300&family=Sacramento&display=swap');
    
        * {
            margin: 0;
            padding: 0;
            /* background-color: #F9F9F9; */
            font-family: 'Montserrat', sans-serif;
            font-size: 1em;
        }
    
        .dis {
            visibility: hidden;
        }
    
         h2 {
            text-align: center;
            color:#b46db0;
            font-style: italic;
            padding: 10px;
            margin-top: 100px;
            letter-spacing: 3px;
            
        }
    
        .cards {
            width: 20%;
            display: inline-block;
            margin: 25px;
            box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            background-color: white;
            transition: transform .2s;
            text-align: center;
            justify-content: center;
        }
    
        .cards:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        }
    
        .image img {
            width: 100%;
            border-top-right-radius: 5px;
            border-top-left-radius: 5px;
        }
    
        .content {
            padding: 10px;
            text-align: center;
            justify-content: center;
        }
    
        .content h2 {
            font-size: 1.2em;
            margin-bottom: 10px;
            text-align: center;
            justify-content: center;
        }
    
        .content p {
            font-size: 0.9em;
            line-height: 1.4em;
            text-align: center;
            justify-content: center;
        }
        .link {
  text-decoration: none;
}

.btnas {
        
          display: block;
           width: 50%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 0.8em;
            color: #120e0e;
            background-color: #08121b;
            cursor: pointer;
            transition: background-color 0.2s;
          margin: 0 auto;
          text-align: center;
          align-items: center;
          justify-content: center;
          margin-top: 20px;
          margin-bottom: 20px;
}

    .btnas:hover {
            background-color: #0062cc;
    }
    a{
        text-decoration: none;
    }
    </style>
